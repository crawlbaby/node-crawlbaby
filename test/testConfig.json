{
  "sites": [
    {
      "name": "target",

      "categories": [
        {
          "name": "baby",
          "entryUrl": "http://m.target.com/c/baby-carriers/-/N-5q0eu",

          "fields": {
            "items": {
              "selector": ".products a.article-link",
              "type": "page",

              "fields": {
                "title": {
                  "selector": ".priceBlock h2",
                  "type": "text"
                },
                "price": {
                  "selector": "#pdpPriceSpan",
                  "type": "text"
                },

                "detailPages": {
                  "selector": ".disclaimer a",
                  "type": "page",

                  "fields": {
                    "categories": {
                      "selector": ".breadcrumbsArea #breadcrumbs span a",
                      "type": "text"
                    }
                  }
                },

                "reviewPages": {
                  "selector": ".ratings-reviews",
                  "type": "page",

                  "fields": {
                    "reviews": {
                      "selector": ".reviews article",
                      "type": "tag",

                      "fields": {
                        "title": {
                          "selector": ".RRtitle",
                          "type": "text"
                        },
                        "author": {
                          "selector": "p.author",
                          "type": "text"
                        },
                        "date": {
                          "selector": ".review-date",
                          "type": "date"
                        },
                        "rating": {
                          "selector": ".ratings-reviews .rating",
                          "type": "class"
                        },
                        "description": {
                          "selector": ".desclamer4reviews",
                          "type": "text"
                        },
                        "likeCount": {
                          "selector": ".like .count",
                          "type": "text"
                        },
                        "detailRatingTitles": {
                          "selector": "#review-quality-ratings .author",
                          "type": "text"
                        },
                        "detailRatingStars": {
                          "selector": "#review-quality-ratings dd span",
                          "type": "class"
                        }

                      }
                    },

                    "nextPage": {
                      "selector": ".next-link a",
                      "type": "nextPage"
                    }

                  }
                }
              }
            },

            "nextPage": {
              "selector": ".next-link a",
              "type": "nextPage"
            }

          }
        }
      ]
    }
  ]
}
