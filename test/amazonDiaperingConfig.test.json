{
  "httpHeaders": {
    "Accept": "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8",
    "Accept-Language": "en-US,en;q=0.8",
    "Cache-Control": "no-cache",
    "Connection": "keep-alive",
    "User-Agent": "Mozilla/5.0 (iPhone; CPU iPhone OS 5_0 like Mac OS X) AppleWebKit/534.46 (KHTML, like Gecko) Version/5.1 Mobile/9A334 Safari/7534.48.3"
  },

  "sites": {
    "Amazon": {

      "categories": {
        "Conditioner": {
          "entryUrl": "http://www.amazon.com/gp/aw/s/ref=?rh=n%3A165796011%2Cn%3A%21165797011%2Cn%3A166736011%2Cn%3A16027271&bbn=166736011&ie=UTF8&qid=1377231229&rnid=166736011",

          "fields": {
            "items": {
              "selector": ".productList a",
              "type": "page",

              "fields": {
                "pageUrl": {
                  "type": "url"
                },
                "title": {
                  "selector": "#product-title",
                  "type": "text",
                  "removeText": {
                    "pattern": "[\\n]",
                    "flags": "g"
                  }
                },
                "price": {
                  "selector": "#prices .a-color-price.a-size-medium",
                  "type": "text",
                  "removeText": {
                    "pattern": "[\\n$]",
                    "flags": "g"
                  }
                },

                "reviewPage": {
                  "selector": "#rating-stars a",
                  "type": "page",

                  "fields": {
                    "reivewAllPages": {
                      "selector": "#aw-cr-show-more",
                      "type": "nextPage",

                      "fields": {
                        "reviews": {
                          "selector": "#reviews-list .review",
                          "type": "tag",

                          "fields": {
                            "pageUrl": {
                              "type": "url"
                            },
                            
                            "title": {
                              "selector": "h4",
                              "type": "text",
                              "removeText": {
                                "pattern": "[\\n]",
                                "flags": "g"
                              }
                            },
                            "author": {
                              "selector": "span.a-color-secondary.a-size-small.a-spacing-mini",
                              "type": "text",
                              "removeText": {
                                "pattern": "[\\n]",
                                "flags": "g"
                              }
                            }
                          }
                        }

                      }
                    }
                  }

                }

              }
            }
          }

        }
      }
    }
  }
}
